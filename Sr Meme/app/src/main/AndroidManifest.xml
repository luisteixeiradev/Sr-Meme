<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.srmeme.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="pt.srmeme.app.Ranking.PointsTableActivity"></activity>
        <activity
            android:name="pt.srmeme.app.Admin.Admin"
            android:screenOrientation="portrait" />
        <activity
            android:name="pt.srmeme.app.Ranking.Ranking"
            android:screenOrientation="portrait" />
        <activity android:name="pt.srmeme.app.MainActivities.MemesByCategories" />
        <activity
            android:name="pt.srmeme.app.Categories.CategoriesPublish"
            android:screenOrientation="portrait" />
        <activity
            android:name="pt.srmeme.app.Login.RecoverPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name="pt.srmeme.app.MainActivities.Publish"
            android:screenOrientation="portrait" />
        <activity
            android:name="pt.srmeme.app.Login.Register"
            android:screenOrientation="portrait" />
        <activity
            android:name="pt.srmeme.app.Login.Login"
            android:screenOrientation="portrait" />
        <activity
            android:name="pt.srmeme.app.MainActivities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>